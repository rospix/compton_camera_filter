<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">

    <node name="compton_filter" pkg="nodelet" type="nodelet" args="standalone compton_camera_filter/ComptonFilter" launch-prefix="debug_roslaunch" output="screen">

      <rosparam file="$(find compton_camera_filter)/config/simulation.yaml" command="load" />

      <!-- subscribed topics -->
      <remap from="~cone_in" to="compton_camera/cone" />

      <!-- advertised topics -->
      <remap from="~pose_out" to="~pose" />

    </node>

  </group>

</launch>
